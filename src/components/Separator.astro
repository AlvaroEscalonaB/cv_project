---
interface Props {
  className?: string
  orientation?: 'horizontal' | 'vertical'
}

const { className = '', orientation = 'horizontal' } = Astro.props
---

<div
  class={`${orientation === 'horizontal' ? 'h-[1px] w-full my-0.5' : 'w-[1px] h-full mx-0.5'} bg-[#E4E4E7] ${className}`}
  data-orientation={orientation}
>
</div>
