---
type LinkName = 'info' | 'cv' | 'blogs' | 'contact' | 'faq'
interface Props {
  name: LinkName
}

const { name } = Astro.props
const currentPath = Astro.url.pathname
const isCurrentPathActive = currentPath.split('/').at(-1) === currentPath
const nameDict = {
  info: {
    name: 'Info',
  },
  cv: {
    name: 'CV',
  },
  blogs: {
    name: 'Blogs',
  },
  contact: {
    name: 'Contacto',
  },
  faq: {
    name: 'FAQ',
  },
}
---

<a
  href={`${Astro.site}/${name}`}
  class={`${isCurrentPathActive ? 'bg-purple-200' : 'bg-white/50'} rounded-lg shadow-sm`}
>
  <div class="flex flex-col justify-center items-center gap-2 w-20 h-20 text-stone-700 text-xs">
    <span>Icon</span>
    <span>{nameDict[name].name}</span>
  </div>
</a>
